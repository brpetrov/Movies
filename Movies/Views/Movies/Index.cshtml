@model IEnumerable<Movies.Models.Movie>

@{
    ViewBag.Title = "Movies";
}

<h2>@ViewBag.Title</h2>

@if (!Model.Any())
{
    <p>We don't have any movies yet.</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>

            <tr>
                <th>ID</th>
                <th>Movie</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {

                <tr>
                    <td>@movie.Id</td>
                    <td>@movie.Name</td>
                </tr>
            }
        </tbody>
    </table>
}

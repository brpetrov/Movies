@model IEnumerable<Movies.Models.Movie>

@{
    ViewBag.Title = "Movies";
}

<h2>@ViewBag.Title</h2>
<p>
    @Html.ActionLink("New Movie", "New", "Movies", null, new { @class = "btn btn-primary" })
</p>


<table class="table table-bordered table-hover" id="movies">
    <thead>

        <tr>
            <th>Name</th>
            <th>Genre</th>
            <th>Release Date</th>
            <th>Number in Stock</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>



@section scripts
{
    <script>
        $(document).ready(function () {
            var table = $("#movies").DataTable({
                ajax: {
                    url: "/api/movies",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name",
                        render: function (data, type, movie) {
                            return "<a href='/movies/edit/" + movie.id + "'>" + movie.name + "</a>"
                        }
                    },
                    {
                        data: "genre.name"
                    },
                    {
                        data: 'releaseDate'
                    },
                    {
                        data: 'numberInStock'
                    },
                    {
                        data: "id",
                        render: function (data) {
                            return "<button class='btn btn-link js-delete' data-movie-id=" + data + "> Delete </button>"
                        }
                    }
                ]
            });

            $("#movies").on("click", ".js-delete", function () {
                var button = $(this)
                bootbox.confirm("Delete this customer?", function (result) {
                    if (result) {
                        $.ajax({
                            url: "api/movies/" + button.attr("data-movie-id"),
                            method: "DELETE",
                            success: function () {
                                table.row(button.parents("tr")).remove().draw();
                            }
                        })
                    }
                })
            })
        })

    </script>
}
